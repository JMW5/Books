<% include /partials/header %>

<div class="container" style="margin-top: 75px;">
	<header class="jumbotron text-center">
		<h1>Welcome to the Books App</h1>
		<p>Founded by Jacquin Wynn Jr</p>
		<a href="/books/new" class="btn btn-info btn-large">Add New Book</a>
	</header>

	<div class="row">
		<div class="col-lg-12"><h3>My Favorite Books</h3></div>
	</div>

	<div class="row">
		<% books.forEach(function(books){ %>
			<div class="col-md-4 col-sm-6">
				<div class="thumbnail text-center">
					<img src="<%= books.image %>" style="width:150px; height:195px;">
					<div class="caption">
						<h4><%= books.title %></h4>
						<h5>Author: <%= books.author %></h5>
					</div> 
					<p class="text-center"><a href="/books/<%= books._id %>" class="btn btn-primary" style="width: 90%">More Info</a></p>
				</div>
			</div>
		<% }) %>		
	</div>	
</div>

<% include /partials/footer %>