
<h1>Edit <%= book.title %></h1>

<form action="/books/<%= book._id %>?_method=PUT" method="POST">
	<input type="text" name="books[title]" value="<%= book.title %>">
	<input type="text" name="books[author]" value="<%= book.author %>">
	<input type="text" name="books[image]" value="<%= book.image %>">
	<textarea type="text" name="book[description]"><%= book.description %></textarea>
	<button>Submit</button>
</form>

<a href="/books">Go Back</a>