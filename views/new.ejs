<% include partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form action="/books" method="POST" style="margin-top: 15%;">
				<h1>Create a New Book</h1>

				<div class="form-group">
					<label>Title of Book: </label>
					<input class="form-control" type="text" name="title" placeholder="title" style="width: 25%";>
				</div>
				<div class="form-group">
					<label>Author: </label>
					<input class="form-control" type="text" name="author" placeholder="name" style="width: 25%;">
				</div>
				<div class="form-group">
					<label>Image URL:</label>
					<input class="form-control" type="text" name="image" placeholder="Image URL" style="width: 25%;">
				</div>
				<div class="form-group">
					<label>Description: </label>
					<textarea class="form-control" name="description" placeholder="What was the #1 you got from this book?" style="width: 25%;"></textarea>
				</div>

				<section id="wrapper"></section>


				<div class="form-group">
					<button class="btn btn-primary">Submit</button>
					<a href="/books" class="btn btn-primary">Go Back</a>
				</div>
			</form>
			<button class="btn btn-primary" id="addChapterBtn">Add Chapter</button>
		</div>		
	</div>
</div>


<% include partials/footer %>